<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D0832E6"
    android:orientation="vertical"
    tools:context=".Bienvenido">

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#714AB6"
        android:text="Bienvenido usuario:"
        android:textColor="#F2FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/menasje2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Selecciona algún elemento"
        android:textColor="#F2FFFFFF"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="35dp"
        android:translationY="-35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/mensaje3"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Materiales para proyecto"
        android:textColor="#F2FFFFFF"
        android:textSize="14sp"
        android:layout_marginLeft="50dp"
        android:translationY="-395dp"
        android:translationX="-40dp"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:translationY="-395dp"
        app:srcCompat="@drawable/construccioneds" />

    <Button
        android:id="@+id/mensaje4"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:text="Recursos (almacén)"
        android:textColor="#F2FFFFFF"
        android:textSize="14dp"
        android:translationY="-395dp"
        android:translationX="10dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:translationY="-395dp"
        app:srcCompat="@drawable/materialesdeconstruccion" />

    <Button
        android:id="@+id/mensaje5"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Imágenes de proyectos"
        android:textColor="#F2FFFFFF"
        android:textSize="14dp"
        android:translationY="-390dp"
        android:translationX="10dp"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:translationY="-390dp"
        app:srcCompat="@drawable/torres" />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>